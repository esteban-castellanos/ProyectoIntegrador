<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs')%>

<body>

    <%- include('partials/header.ejs')%>

<main class="ppalcon container">

    <%- include('partials/filtros.ejs')%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" id="mapnav">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/productos/porTienda/<%=producto.tienda.id%>">Tienda: <%=producto.tienda.name%></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%=producto.name%></li>
        </ol>
    </nav>

    <section id="productos" class="container">
        <article class="row cadaprod1">
           <div class='row col-12' >
            <div class="col-5 contimg" >
                <img src="/img/<%=producto.image%>" alt="" class="imgart">
            </div>
            <div class="col-7 continfo">
                <div class="row" id="rowClass">
                    <p class="nombreProducto col-12 "><%=producto.name%></p>
                     <p class="descripcionProducto col-8"><%=producto.short_description%></p>
                        <span class="precioPrducto col-4"><%='$' + producto.price%></span>
                        <p class="descripcionProducto2 col-12"><%=producto.long_description%></p>
                    </div>
                </div>
            </div>

            <form action="/user/carrito" method="POST" class='col-12' id="formulario">
                <div class="alter col-12">
                    <select class="custom-select custom-select-sm" name="segundaOpcion" id="opcion" class="form-control">
                        <option selected disabled hidden>Si no hay stock... </option>
                        <option value="eliminar">Eliminar</option>
                        <option value="distintoTam">Distinto tama√±o</option>
                        <option value="marcaSim">Marca similar</option>
                    </select>
                    <div class="opcion invalid-feedback"></div>
                    <input type="number" name="id" value="<%=producto.id%>" style="display: none">
                </div>
                <div class="contadortotal row ">
                <div class="col-6 col-sm-6 col-md-4 col-lg-2 col-xl-2 input-group">

                        <button type="button" class="selectorContador quantity-left-minus btn btn-number"  data-type="minus" data-field="" id="restar">
                        -
                        </button>

                    <input type="number" id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="100">

                        <button type="button" class="selectorContador quantity-right-plus btn btn-number" data-type="plus" data-field="" id="sumar">
                        +
                        </button>
                </div>
                    <button type="submit" class="col-6 col-sm-6 col-md-3 col-lg-4 col-xl-3 botonproductoQ" id="LoQuiero">LO QUIERO!</button>
                </div>
            </form>
        </article>
    </section>
</main>

<%- include('partials/footer.ejs')%>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src='/js/quantity.js'></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>