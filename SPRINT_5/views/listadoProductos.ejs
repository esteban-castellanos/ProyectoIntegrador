<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs')%>

<body>
    <header class='container'>
        <div class='hedadmin row' >
            <div class="col-6 col-sm-4 col-md-6 col-lg-4 col-xl-3" >
                <button type="button" class="btnverprod"onclick="window.location = '/productos/nuevoproducto'">AGREGAR PRODUCTO</button>
                <button type="button" class="btnverprod"onclick="window.location = '/productos/tiendas'">VER LISTADO DE TIENDAS</button>

            </div>
            <div ></div>
            <img class= 'imgadmin' src="/img/logo_anteojos-08.png " alt="Logo" href="/index" onclick="window.location = '/index'">
        </div>

    </div>
    <form action="/productos/search" method="GET" class="container row">

            <input type="search" class="form-control col-11" placeholder="Nombre del producto" aria-label="Recipient's username" aria-describedby="button-addon2" name="nombre" aria-label="search">

            <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="fas fa-search lupita"></i></button>
            </div>

    </form>
</div>
</div>
</header>


<main class="container">
    <div class='row contenadmin'>
   <div class="col-12 tablalistadmincab">
                    <h4>LISTADO DE PRODUCTOS</h4>
   </div>

   <table class='col-12'>
       <thead>
          <tr >
             <th class='primeracol' scope="col">#</th>
             <th scope="col">Código</th>
             <th scope="col">Nombre</th>
             <th class='ocultar'scope="col">Descripción</th>
             <th class='ocultar'scope="col">Descripción 2</th>
             <th class='ocultar'scope="col">Precio</th>
             <th class='ocultar'scope="col">Tienda</th>
          </tr>
       </thead>
       <tbody>
        <% for (let i = 0; i<productos.length; i++) { %>
          <tr class='adelist'>
             <th class= 'primeracol' scope="row"><%=i+1%></th>
             <td ><%= productos[i].codigo%></td>
             <td ><%= productos[i].name %></td>
             <td class='ocultar'><%= productos[i].short_description%></td>
             <% if (productos[i].long_description != null) { %>
             <td class='ocultar'><%= productos[i].long_description.slice(0,15) + "..." %></td>
                <% } else { %>
             <td class='ocultar'><%= "" %></td>
                 <% } %>
             <td class='ocultar'><%= productos[i].price%></td>
             <td class='ocultar'><%= productos[i].tienda.name%></td>

            <form class="" action="/productos/<%=productos[i].id%>?_method=DELETE" method="post">
                <td><button class="btn btn-outline-secondary" type="submit" name="delete" id="button-addon2"><i class="fas fa-trash" title="Borrar"></i></button></td>
                </td>
            </form>

            <td><a href="/productos/editProducto/<%=productos[i].id%>"> <button class="btn btn-outline-secondary" type="button" id="button-addon2"><i class="fas fa-pen"></i></button></a></td>

        </tr>
        <% } %>
    </tbody>
    </table>

</main>

<%- include('partials/footer.ejs')%>

<script src="/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>