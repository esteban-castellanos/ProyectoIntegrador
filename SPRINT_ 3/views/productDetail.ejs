<body>

    <%- include('partials/header.ejs')%>

<main class="ppalcon container">

    <%- include('partials/filtros.ejs')%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb" id="mapnav">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Tienda:Cardamomo</a></li>
            <li class="breadcrumb-item active" aria-current="page">Productos</li>
        </ol>
    </nav>

    <section id="productos" class="container">
        <article class="row cadaprod1">
            <div class="col-5 imgart" >
                <img src="/img/<%=producto.fotoProducto%>" alt="" class="logosproductos">
            </div>

            <div class="col-7 contenedorProducto">
                <div class="row" id="rowClass">
                    <span class="nombreProducto col-12 "><%=producto.nombreProducto%></span>
                    <div class="row" id="rowProducto">
                        <span class="descripcionProducto col-8"><%=producto.descCorta%></span>
                        <span class="descripcionProducto2 col-8"><%=producto.descLarga%></span>
                        <span class="precioPrducto col-4"><%='$' + producto.precio%></span>
                        <div class="col-12">
                            <select class="custom-select custom-select-sm" id="selectStock">
                                <option selected disabled hidden >Si no hay stock...</option>
                                <option value="1">Sacar de la lista</option>
                                <option value="2">Distinto tama√±o</option>
                                <option value="3">Marca similar</option>
                            </select>
                        </div>
                        <div class="contadortotal ">
                            <div class="selectorContador col-6 col-sm-6">
                                <button class="botonproducto"  id="contadores col-6 col-sm-4" >+</button>
                                <input type="number" name="cantProductos" id="contadorInput" class="col-2 col-sm-3">
                                <button class="botonproducto" id="contadores col-6 col-sm-4">-</button>
                            </div>
                            <button class="botonproductoQ" id="LoQuiero col-12 col-sm-6">LO QUIERO!</button>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </section>
</main>

